---
import { profile } from "../data/profile";
---

<section class="hero" id="hero" data-section="hero" data-reveal tabindex="-1">
  <div class="hero-surface">
    <div class="hero-media" data-parallax data-animate>
      <span class="avatar avatar--hero" data-avatar data-initials="AM">
        <img
          src={profile.headshot.url}
          alt={profile.headshot.alt}
          width={profile.headshot.width}
          height={profile.headshot.height}
          loading="eager"
          decoding="async"
          fetchpriority="high"
          data-fallback={profile.fallback.src}
        />
        <span class="avatar-fallback" aria-hidden="true">AM</span>
      </span>
      <div class="hero-orb" aria-hidden="true"></div>
    </div>
    <div class="hero-copy content" data-animate-group>
      <p class="hero-kicker" data-animate>Hello, Iâ€™m</p>
      <h1 data-animate>Ammaar Murshid</h1>
      <p class="hero-tagline" data-animate>Cloud &amp; Platform Engineer</p>
      <p class="hero-lede" data-animate>
        I design and operate cloud platforms that teams can trust. My work blends automation, observability, and thoughtful
        enablement so product engineers can ship with confidence.
      </p>
      <div class="hero-cta" data-animate>
        <a class="btn" href="#projects" data-scroll>View Projects</a>
        <a class="btn ghost" href="/Ammaar_Murshid_CV_CloudDevOps.pdf">Download CV</a>
      </div>
    </div>
  </div>
</section>
