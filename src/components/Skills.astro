---
import { Image } from 'astro:assets';
import azureIcon from '../assets/icons/azure.svg';
import terraformIcon from '../assets/icons/HashiCorp-Terraform.svg';
import powershellIcon from '../assets/icons/powershell.svg';
import bashIcon from '../assets/icons/Bash.svg';
import pythonIcon from '../assets/icons/python.svg';
import githubActionsIcon from '../assets/icons/github-actions.svg';
import dockerIcon from '../assets/icons/docker.svg';
import kubernetesIcon from '../assets/icons/kubernetes.svg';
import windowsIcon from '../assets/icons/Windows-11.svg';
import sqlIcon from '../assets/icons/Azure-SQL-Database.svg';
import javaIcon from '../assets/icons/java.svg';
import javascriptIcon from '../assets/icons/javascript.svg';

const skills = [
  {
    label: 'Microsoft Azure',
    icon: azureIcon,
    color: '#0078D4',
  },
  {
    label: 'Terraform',
    icon: terraformIcon,
    color: '#7B42BC',
  },
  {
    label: 'PowerShell',
    icon: powershellIcon,
    color: '#5391FE',
  },
  {
    label: 'Bash',
    icon: bashIcon,
    color: '#5391FE',
  },
  { label: 'Python', icon: pythonIcon, color: '#3776AB' },
  {
    label: 'GitHub Actions CI/CD',
    icon: githubActionsIcon,
    color: '#2088FF',
  },
  { label: 'Docker', icon: dockerIcon, color: '#2496ED' },
  {
    label: 'Kubernetes',
    icon: kubernetesIcon,
    color: '#326CE5',
  },
  {
    label: 'Windows Server',
    icon: windowsIcon,
    color: '#00ADEF',
  },
  {
    label: 'SQL',
    icon: sqlIcon,
    color: '#CC2927',
  },
  { label: 'Java', icon: javaIcon, color: '#007396' },
  {
    label: 'JavaScript',
    icon: javascriptIcon,
    color: '#F7DF1E',
  },
];
---

<section
  class="skills"
  id="skills"
  aria-labelledby="skills-title"
  data-section="skills"
  data-reveal
  tabindex="-1"
>
  <div class="section-shell" data-reveal-group>
    <div class="section-header content" data-reveal-item>
      <h2 id="skills-title">Skills</h2>
      <p>
        A snapshot of the technologies and practices I lean on to deliver
        dependable platforms.
      </p>
    </div>
    <div class="skills-grid" role="list">
      {
        skills.map((skill, index) => (
          <article
            class="skill"
            role="listitem"
            aria-label={skill.label}
            style={{ '--skill-color': skill.color, '--stagger-index': index }}
            data-reveal-item
          >
            <Image
              class="skill-icon"
              src={skill.icon}
              alt=""
              aria-hidden="true"
              title={skill.label}
              width={40}
              height={40}
              loading="lazy"
            />
            <span>{skill.label}</span>
          </article>
        ))
      }
    </div>
  </div>
</section>
