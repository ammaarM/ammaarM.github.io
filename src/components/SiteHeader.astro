---

interface Props {
  currentPath?: string;
}

const navLinks = [
  { href: "#about", label: "About" },
  { href: "#skills", label: "Skills" },
  { href: "#projects", label: "Projects" },
  { href: "#contact", label: "Contact" },
];

const themeOptions = [
  { value: "light", label: "Light" },
  { value: "dark", label: "Dark" },
  { value: "system", label: "Auto" },
];

const { currentPath = "/" } = Astro.props as Props;
---
<header class="site-header" data-reveal>
  <div class="container header-inner">
    <a class="brand" href="#hero" aria-label="Home" data-scroll>
      <span
        class="avatar avatar--nav is-fallback"
        role="img"
        aria-label="Ammaar Murshid monogram"
        data-avatar
        data-initials="AM"
      >
        <span class="avatar-fallback" aria-hidden="true">AM</span>
      </span>
      <span class="brand-text">Ammaar Murshid</span>
    </a>
    <button
      class="nav-toggle"
      type="button"
      aria-label="Toggle navigation"
      aria-expanded="false"
      data-nav-toggle
    >
      <span class="nav-toggle-bar" aria-hidden="true"></span>
      <span class="nav-toggle-bar" aria-hidden="true"></span>
      <span class="nav-toggle-bar" aria-hidden="true"></span>
    </button>
    <nav class="site-nav" aria-label="Primary">
      <ul>
        {navLinks.map(({ href, label }) => (
          <li>
            <a class="nav-link" href={href} data-scroll>
              {label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <div class="theme-switcher" role="group" aria-label="Theme mode">
      <span class="theme-switcher-label" data-theme-label>Auto</span>
      <div class="theme-switcher-controls">
        {themeOptions.map((option) => (
          <button
            type="button"
            class="theme-switcher-button"
            data-theme-option={option.value}
            aria-pressed="false"
          >
            <span aria-hidden="true">{option.label}</span>
            <span class="sr-only">{`Use ${option.label.toLowerCase()} theme`}</span>
          </button>
        ))}
      </div>
    </div>
  </div>
</header>
