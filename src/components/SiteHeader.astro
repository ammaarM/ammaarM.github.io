---
import ThemeToggle from './ThemeToggle.astro';
import { profile } from '../data/profile';

interface Props {
  currentPath?: string;
}

const navLinks = [
  { href: '#about', label: 'About' },
  { href: '#skills', label: 'Skills' },
  { href: '#projects', label: 'Projects' },
  { href: '#contact', label: 'Contact' },
];

void (Astro.props as Props);
---
<header class="site-header" data-reveal>
  <div class="container header-inner" data-animate>
    <a class="brand" href="#hero" aria-label="Home" data-scroll>
      <span class="avatar avatar--nav" data-avatar data-initials="AM">
        <img
          src={profile.headshot.url}
          alt={profile.headshot.alt}
          width={128}
          height={128}
          loading="lazy"
          decoding="async"
          data-fallback={profile.fallback.src}
        />
        <span class="avatar-fallback" aria-hidden="true">AM</span>
      </span>
      <span class="brand-text">Ammaar Murshid</span>
    </a>
    <div class="header-actions">
      <nav class="site-nav" aria-label="Primary">
        <ul>
          {navLinks.map(({ href, label }) => (
            <li>
              <a class="nav-link" href={href} data-scroll>
                {label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <ThemeToggle />
      <button
        class="nav-toggle"
        type="button"
        aria-label="Toggle navigation"
        aria-expanded="false"
        data-nav-toggle
      >
        <span class="nav-toggle-bar" aria-hidden="true"></span>
        <span class="nav-toggle-bar" aria-hidden="true"></span>
        <span class="nav-toggle-bar" aria-hidden="true"></span>
      </button>
    </div>
  </div>
</header>
